<% if current_user.like?(micropost) %>
  <%= form_for(current_user.likes.find_by(micropost_id: micropost.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= button_tag class: "btn btn-warning btn-sm" do %>
      <%= content_tag :span, "いいね！済み", class: "glyphicon glyphicon-star" %>
    <% end %>
  <% end %>
<% else %>
  <%= form_for(current_user.likes.build) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id  %>
    <%= button_tag class: "btn btn-primary btn-sm" do %>
      <%= content_tag :span, "いいね！", class: "glyphicon glyphicon-star-empty" %>
    <% end %>
  <% end %>
<% end %>
